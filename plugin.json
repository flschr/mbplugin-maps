{
  "name": "mbplugin-map",
  "title": "Privacy-Friendly Google Maps",
  "description": "Provides a shortcode to embed Google Maps in a privacy-conscious way with a click-to-load preview and optional privacy notice.",
  "author": "Ren√© Fischer",
  "version": "2.0.1",
  "fields": [
    {
      "field": "params.show_privacy_notice",
      "label": "Show privacy notice",
      "type": "boolean",
      "default": true
    },
    {
      "field": "params.googlemaps_privacy_notice_text",
      "label": "Privacy notice text",
      "type": "string"
    },
    {
      "field": "params.default_map_zoom",
      "label": "Default zoom level",
      "type": "string",
      "default": "14"
    },
    {
      "field": "params.google_staticmaps_key",
      "label": "Google Maps Static API Key",
      "type": "string",
      "default": ""
    }
  ]
}