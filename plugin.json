{
  "name": "mbplugin-map",
  "title": "Privacy-Friendly Maps",
  "description": "Embed interactive maps powered by OpenStreetMap, with optional privacy notice text.",
  "author": "Ren√© Fischer",
  "version": "3.2.0",
  "fields": [
    {
      "field": "params.show_privacy_notice",
      "label": "Show privacy notice",
      "type": "boolean",
      "default": true
    },
    {
      "field": "params.googlemaps_privacy_notice_text",
      "label": "Privacy notice text",
      "type": "string"
    },
    {
      "field": "params.default_map_zoom",
      "label": "Default zoom level",
      "type": "string",
      "default": "14"
    },
    {
      "field": "params.map_preview_provider",
      "label": "Static preview provider (osm, maptiler, geoapify)",
      "type": "string",
      "default": "osm"
    },
    {
      "field": "params.map_preview_style",
      "label": "Static preview style (optional)",
      "type": "string"
    },
    {
      "field": "params.map_preview_api_key",
      "label": "Static preview API key (optional)",
      "type": "string"
    }
  ]
}
