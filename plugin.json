{
  "name": "mbplugin-map",
  "title": "Privacy-Friendly Maps",
  "description": "Embed interactive maps powered by OpenStreetMap easily.",
  "author": "Ren√© Fischer",
  "version": "4.1.0",
  "fields": [
    {
      "field": "params.show_privacy_notice",
      "label": "Show privacy notice",
      "type": "boolean",
      "default": true
    },
    {
      "field": "params.googlemaps_privacy_notice_text",
      "label": "Privacy notice text",
      "type": "string"
    },
    {
      "field": "params.default_map_zoom",
      "label": "Default zoom level",
      "type": "string",
      "default": "14"
    },
    {
      "field": "params.map_preview_style",
      "label": "Geoapify preview style",
      "type": "string"
    },
    {
      "field": "params.map_preview_style_light",
      "label": "Geoapify preview style (light mode)",
      "type": "string"
    },
    {
      "field": "params.map_preview_style_dark",
      "label": "Geoapify preview style (dark mode)",
      "type": "string"
    },
    {
      "field": "params.map_preview_api_key",
      "label": "Geoapify API key",
      "type": "string"
    }
  ]
}
